<Window x:Class="UsbComposite.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UsbComposite"
        xmlns:models="clr-namespace:UsbComposite.Models"
        xmlns:vm="clr-namespace:UsbComposite.Viewmodels" 
        xmlns:helpers="clr-namespace:UsbComposite.Helpers"
        mc:Ignorable="d"
        Title="UC-Link" Height="700" Width="1250"
        Background="White">
    <Window.Resources>
        <SolidColorBrush x:Key="SidebarBackgroundBrush" Color="#FFFFFF"/>

        <SolidColorBrush x:Key="TabSelectedBrush" Color="#E8F4FD"/>
        <SolidColorBrush x:Key="TabHoverBrush" Color="#F2F8FC"/>
        <SolidColorBrush x:Key="TabForegroundBrush" Color="#262626"/>

        <SolidColorBrush x:Key="TabSelectedForegroundBrush" Color="White"/>
        <SolidColorBrush x:Key="HeaderForegroundBrush" Color="#2C3E50"/>
        <SolidColorBrush x:Key="MainContentBackgroundBrush" Color="#FFFFFF"/>

    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="5*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="{StaticResource SidebarBackgroundBrush}">
            <StackPanel>


                <Border CornerRadius="10"  Margin="5,15,5,10" >
                    <StackPanel Orientation="Horizontal" 
                HorizontalAlignment="Center" 
                Margin="0,20,0,10">
                        <TextBlock FontFamily="Segoe MDL2 Assets"
                   Text="&#xE713;"
                   FontSize="50" VerticalAlignment="Center"
                   Margin="10,15,5,15" Foreground="Black"/>
                        <TextBlock Text="Hoang's device"
                   Foreground="{DynamicResource {x:Static SystemColors.MenuHighlightBrushKey}}" 
                   FontSize="16"
                   FontWeight="Bold"
                   VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <TabControl x:Name="SidebarTabControl"
                            SelectionChanged="SidebarTabControl_SelectionChanged"
                            TabStripPlacement="Left"
                            BorderThickness="0"
                            Background="Transparent"
                            FontSize="13"
                            FontWeight="Bold">

                    <TabControl.Resources>
                        <Style TargetType="{x:Type TabItem}">
                            <Setter Property="Height" Value="35"/>
                            <Setter Property="Width" Value="Auto"/>
                            <Setter Property="Padding" Value="10,0,0,0"/>
                            <Setter Property="VerticalContentAlignment" Value="Center"/>
                            <Setter Property="HorizontalContentAlignment" Value="Left"/>
                            <Setter Property="Foreground" Value="{StaticResource TabForegroundBrush}"/>

                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type TabItem}">
                                        <Border x:Name="border"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        BorderThickness="0"
                        CornerRadius="8"
                        Margin="15,0,15,0">
                                            <ContentPresenter x:Name="contentPresenter"
                                      ContentSource="Header"
                                      RecognizesAccessKey="True"
                                      SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                                      HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                      VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                      Margin="{TemplateBinding Padding}"/>
                                        </Border>

                                        <ControlTemplate.Triggers>

                                            <!-- Khi Selected thì hiển thị border -->
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource TabSelectedForegroundBrush}"/>
                                                <Setter TargetName="border" Property="Background" Value="#FF4C61EC"/>

                                                <!-- Nền nhẹ nếu muốn -->
                                                <Setter Property="Foreground" Value="{StaticResource TabSelectedForegroundBrush}"/>
                                            </Trigger>

                                            <!-- Khi Hover thì hiện border -->
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="BorderBrush" Value="#90C5FF"/>
                                                <Setter Property="Foreground" Value="{StaticResource TabForegroundBrush}"/>
                                            </Trigger>

                                            <!-- Khi bị disable -->
                                            <Trigger Property="IsEnabled" Value="False">
                                                <Setter TargetName="border" Property="BorderBrush" Value="{DynamicResource {x:Static SystemColors.ControlDarkBrushKey}}"/>
                                                <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"/>
                                            </Trigger>

                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </TabControl.Resources>

                    <TabItem>
                        <TabItem.Header>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock FontFamily="Segoe MDL2 Assets"
                   Text="&#xE701;"
                   FontSize="16"
                   Margin="0,0,10,0"
                   VerticalAlignment="Center"/>
                                <TextBlock Text="Connect device" VerticalAlignment="Center" FontSize="14"/>

                            </StackPanel>
                        </TabItem.Header>
                    </TabItem>

                    <TabItem>
                        <TabItem.Header>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock FontFamily="Segoe MDL2 Assets"
                   Text="&#xE804;"
                   FontSize="16"
                   Margin="0,0,10,0"
                   VerticalAlignment="Center"/>
                                <TextBlock Text="DignosticCan" VerticalAlignment="Center" FontSize="14"/>
                            </StackPanel>
                        </TabItem.Header>
                    </TabItem>

                    <TabItem>
                        <TabItem.Header>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock FontFamily="Segoe MDL2 Assets"
                   Text="&#xE703;"
                   FontSize="16"
                   Margin="0,0,10,0"
                   VerticalAlignment="Center"/>
                                <TextBlock Text="Comport" VerticalAlignment="Center" FontSize="14"/>
                            </StackPanel>
                        </TabItem.Header>
                    </TabItem>


                    <TabItem>
                        <TabItem.Header>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock FontFamily="Segoe MDL2 Assets"
                   Text="&#xE71d;"
                   FontSize="16"
                   Margin="0,0,10,0"
                   VerticalAlignment="Center"/>
                                <TextBlock Text="Device information" VerticalAlignment="Center" FontSize="14"/>
                            </StackPanel>
                        </TabItem.Header>
                    </TabItem>

                    <TabItem>
                        <TabItem.Header>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock FontFamily="Segoe MDL2 Assets"
                   Text="&#xE783;"
                   FontSize="16"
                   Margin="0,0,10,0"
                   VerticalAlignment="Center"/>
                                <TextBlock Text="Help" VerticalAlignment="Center" FontSize="14"/>
                            </StackPanel>
                        </TabItem.Header>
                    </TabItem>

                </TabControl>
            </StackPanel>
        </Border>
        <Border 
            Grid.Column="1"
            CornerRadius="15"
            BorderBrush="#CCCCCC"
            BorderThickness="0" Background="#FFF0F0F0" 
           >
            <ContentControl x:Name="MainContentArea"  Background="{StaticResource MainContentBackgroundBrush}" />
        </Border>
    </Grid>
</Window>